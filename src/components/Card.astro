---
const { titel, beskrivelse, deluxe, variant } = Astro.props;
import "../styles/global.css";
---

<div id="padding_sider">
  <h4>Cards</h4>
  <article id="card_liste">
    <div id="produkt_billede">
      <img id="ny" src="/img/nye_varer.svg" alt="" /><img
        id="deluxe"
        src="/img/deluxe.svg"
        alt=""
      /><img id="reol" src="/img/reol1.jpg" alt="" />
    </div>
    <div id="produkt_beskrivelse">
      <h5>Poul Erik Reol</h5>
      <p id="b2">
        Poul Erik 1914-2007: Reolskab af fineret teak, 1960'erne. Monteret med
        skydelåger og hylder. Mål. H. 90 B. 89 D. 42 cm.
      </p>
      <div id="pris">
        <p id="b1">Næste bud: 3600 DKK</p>
        <p id="b1">Vurdering: 4600 DKK</p>
      </div>
      <div id="lokation">
        <img src="/img/lokation.svg" alt="" /><p id="bb2">DK, Herlev</p>
      </div>
      <div id="tidoggem">
        <div id="tid">
          <img src="/img/Ur.svg" alt="" /><p id="bb2">18-12-2022 kl 12:56</p>
        </div><div id="gemvare">
          <button>Gem<img src="/img/ikke_gemt.svg" alt="" /></button>
        </div>
      </div>
    </div>
  </article>
  <article id="card_galleri">
    <div id="produkt_billede2">
      <img id="ny2" src="/img/nye_varer.svg" alt="" /><img
        id="gem2"
        src="/img/ikke_gemtvare.svg"
        alt=""
      /><img id="deluxe2" src="/img/deluxe.svg" alt="" /><img
        id="stol"
        src="/img/stol.jpg"
        alt=""
      />
    </div>
    <div id="produkt_beskrivelse2">
      <h5>Sven Ager Stol</h5>
      <img src="/img/line.svg" alt="" /><p id="b2">Næste bud: 3600 DKK</p>
      <p id="b2">Vurdering: 4600 DKK</p>
    </div>
  </article>
</div>

