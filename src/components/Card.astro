<style>
  h4 {
    padding-top: var(--spacing-16);
    font-family: "open-sans", sans-serif;
    font-weight: 600;
    text-transform: uppercase;
    text-decoration: underline;
    color: var(--color-primary-blue-700);
    font-size: 24px;
    padding-bottom: var(--spacing-16);
  }
  #produkt_billede {
    display: grid;
  }
  #produkt_billede img {
    grid-area: 1/1;
  }
  #reol {
    border-bottom-left-radius: 8px;
    border-top-left-radius: 8px;
  }

  #produkt_beskrivelse {
    margin-right: 16px;
  }

  #ny {
    z-index: 1;
    padding-top: 8px;
    padding-left: 8px;
  }

  #ny2 {
    z-index: 1;
    padding-top: 8px;
    padding-left: 8px;
  }
  #deluxe {
    z-index: 1;
    place-self: end start;
    padding-bottom: 50px;
  }

  #deluxe2 {
    z-index: 1;
    place-self: end start;
    padding-bottom: 20px;
  }
  #gem2 {
    z-index: 1;
    place-self: start end;
    padding-top: 8px;
    padding-right: 8px;
  }

  #pris {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-56);
  }
  #tid {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-8);
    align-items: center;
    margin-inline-end: auto;
  }

  #tid img {
    max-height: 26px;
  }
  #lokation {
    display: flex;
    flex-direction: row;
    gap: var(--spacing-8);
    margin-top: 10px;
    margin-left: -4px;
  }
  #gemvare {
    place-self: end end;
    align-items: flex-end;
  }

  #tidoggem {
    display: flex;
    flex-direction: row;
  }

  #padding_sider {
    background-color: var(--color-accent-creme);
    padding-left: var(--spacing-96);
    padding-right: var(--spacing-96);
    padding-bottom: 30px;
  }
  #card_liste {
    display: grid;
    grid-template-columns: 1fr 2fr;
    max-width: 934px;
    max-height: 300px;
    background-color: var(--color-secondary-mint);
    border-radius: var(--radius-cards-button);
    margin-bottom: 30px;
    box-shadow: var(--shadow-small);
  }

  #card_galleri {
    display: grid;
    grid-template-rows: 1fr 1fr;
    max-width: 280px;
    max-height: 350px;
    background-color: var(--color-secondary-mint);
    border-radius: var(--radius-cards-button);
    box-shadow: var(--shadow-small);
  }

  #produkt_billede2 {
    display: grid;
  }
  #produkt_billede2 img {
    grid-area: 1/1;
  }

  #stol {
    border-top-right-radius: 8px;
    border-top-left-radius: 8px;
  }
  #card_galleri p {
    margin-top: 6px;
    margin-bottom: 6px;
  }

  #produkt_beskrivelse2 img {
    margin-left: 120px;
  }

  #b1 {
    max-width: 1000px;
    font-family: "open-sans", sans-serif;
    font-weight: 500;
    color: var(--color-primary-blue);
    font-size: var(--font-size-body-1);
    margin-top: 6px;
    margin-bottom: 6px;
  }
  #bb2 {
    max-width: 1000px;
    font-family: "open-sans", sans-serif;
    font-weight: 700;
    color: var(--color-primary-blue);
    font-size: var(--font-size-body-2);
    margin-top: 6px;
    margin-bottom: 6px;
  }

  #b2 {
    max-width: 1000px;
    font-family: "open-sans", sans-serif;
    font-weight: 500;
    color: var(--color-primary-blue-400);
    font-size: var(--font-size-body-2);
    padding-bottom: 6px;
    margin-right: 6px;
    border-bottom: 1px solid #3f4851;
    line-height: var(--line-height-body-2);
  }

  #card_galleri #b2 {
    border: none;
    text-align: center;
  }

  button {
    display: flex;
    flex-direction: row;
    align-items: center;
    font-family: "open-sans", sans-serif;
    font-weight: 700;
    text-transform: uppercase;
    color: var(--color-primary-blue-700);
    font-size: var(--font-size-label-button);

    letter-spacing: var(--letter-spacing-header-1-button);

    border-radius: var(--radius-cards-button);
    margin-bottom: var(--spacing-8);
    height: 44px;
    color: var(--color-accent-orange);
    border-style: none;
    background-color: transparent;
  }

  h5 {
    font-family: "open-sans", sans-serif;
    font-weight: 600;
    letter-spacing: var(--letter-spacing-header-3-label);
    font-size: var(--font-size-label-button);
    color: var(--color-primary-blue-600);
    margin-top: 20px;
    margin-bottom: 6px;
  }

  #card_galleri h5 {
    text-align: center;
    margin-top: 16px;
    margin-bottom: 6px;
  }
